<table>
  <tr class="magnitude">
    <td colspan="2">
      <label>
        <input type="radio" name="switch-legend" value="1">
        <span> As magnitude</span>
      </label>
    </td>
  </tr>
  <tr class="percentage">
    <td colspan="2">
      <label>
        <input type="radio" name="switch-legend" value="2">
        <span> As percentage</span>
      </label>
    </td>
  </tr>
  <% _.each(percent, function(p) { %>
    <tr>
      <td><i style="background:<%= colors[_.indexOf(percent, p)] %>"></i></td>
      <td><%= p %></td>
    </tr>
  <% }); %>
</table>
